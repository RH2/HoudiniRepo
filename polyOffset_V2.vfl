	float clampAngle(float inputAngle){
    	float x = inputAngle/3.14159265;
    	x=x%2;
    	if(x>1){
    	    x=-1+(x%1);
    	}
    	if(x<-1){
    	    x=1+(x%1);
    	}
    	x = x*3.14159265;
    	return x;
		}
